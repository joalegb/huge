{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "allowJs": false,
    "baseUrl": "./",
    "lib": [
      "es2017"
    ],
    "types": [
      "mocha"
    ]
  },
  "include": [
    "./"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./@types"
  ],
  "exclude": [
    "node_modules"
  ]
}